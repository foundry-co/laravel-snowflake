{
    "name": "foundry-co/laravel-snowflake",
    "description": "Snowflake database driver for Laravel using REST API - no PDO extension required",
    "keywords": ["laravel", "snowflake", "database", "eloquent", "driver"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Josh Butts",
            "email": "josh.butts@foundryco.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "firebase/php-jwt": "^6.10"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "FoundryCo\\Snowflake\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FoundryCo\\Snowflake\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "FoundryCo\\Snowflake\\SnowflakeServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
